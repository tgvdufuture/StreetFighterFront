{% extends 'base.html.twig' %}

{% block title %}Character{% endblock %}

{% block body %}
    <h1>Character</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ character.id }}</td>
            </tr>
            <tr>
                <th>Strength</th>
                <td>{{ character.Strength }}</td>
            </tr>
            <tr>
                <th>Speed</th>
                <td>{{ character.Speed }}</td>
            </tr>
            <tr>
                <th>Durability</th>
                <td>{{ character.Durability }}</td>
            </tr>
            <tr>
                <th>Power</th>
                <td>{{ character.Power }}</td>
            </tr>
            <tr>
                <th>Combat</th>
                <td>{{ character.Combat }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ character.Name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_character_index') }}">back to list</a>

    <a href="{{ path('app_character_edit', {'id': character.id}) }}">edit</a>

    {{ include('character/_delete_form.html.twig') }}
